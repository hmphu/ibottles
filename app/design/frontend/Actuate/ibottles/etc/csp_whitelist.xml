<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
	<policies>
		<policy id="font-src">
			<values>
				<value id="google-fonts" type="host">https://fonts.gstatic.com</value>
			</values>
		</policy>
		<policy id="frame-src">
			<values>
				<value id="trustpilot" type="host">https://*.trustpilot.com</value>
				<value id="live-person" type="host">https://*.lpsnmedia.net</value>
			</values>
		</policy>
		<policy id="img-src">
			<values>
				<value id="google-images" type="host">https://google.co.uk</value>
				<value id="google-images-www" type="host">https://www.google.co.uk</value>
			</values>
		</policy>
		<policy id="script-src">
			<values>
				<value id="google-tagmanager" type="host">https://www.googletagmanager.com</value>
				<value id="trustpilot" type="host">https://*.trustpilot.com</value>
				<value id="live-person" type="host">https://*.liveperson.net</value>
			</values>
		</policy>
		<policy id="style-src">
			<values>
				<value id="google-styles" type="host">https://fonts.googleapis.com</value>
			</values>
		</policy>
	</policies>
</csp_whitelist>
